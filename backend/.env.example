# Server Configuration
PORT=5000
NODE_ENV=development
BASE_URL=http://localhost:5000

# OpenAI Configuration (for DALL-E image generation)
OPENAI_API_KEY=your_openai_api_key_here
USE_AI_GENERATION=true

# MongoDB Configuration (optional - leave empty to run without database)
MONGODB_URI=mongodb://localhost:27017/thumbnail-generator

# AWS S3 Configuration (optional - for cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=thumbnail-bucket

# Stability AI Configuration (alternative to OpenAI - optional)
STABILITY_API_KEY=your_stability_api_key_here
